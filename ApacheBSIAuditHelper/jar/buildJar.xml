<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="all" name="Create Runnable Jar for Project ApacheBSIAuditHelper">
    <!-- ANT 1.7 is required -->
    <target name="create_run_jar">
        <jar destfile="./audit.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="org.akquinet.audit.bsi.httpd.HttpdAudit"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="../bin"/>
			<fileset dir="../properties"/>
        	<fileset file="../../LICENSE"/>
        </jar>
    </target>
	
	<target name="test">
	</target>
	
	<target name="clean">
		<delete>
			<fileset dir="../deploy" excludes="."/>
		</delete>
	</target>
	
	<target name="build" depends="create_run_jar,clean">
		<tar destfile="../deploy/cochise.tar.gz" compression="gzip">
			<tarfileset dir="../../ScriptedChecker" mode="755">
				<include name="*.sh"/>
			</tarfileset>
			<tarfileset dir="../../ScriptedChecker" mode="644">
			    <include name="*.awk"/>
			</tarfileset>
			<tarfileset file="../jar/audit.jar"/>
			
			<tarfileset dir="../html" mode="644" prefix="html">
			    <include name="**/*"/>
			</tarfileset>
		</tar>
		
	</target>
	
	<target name="all" depends="build,test"/>
</project>
